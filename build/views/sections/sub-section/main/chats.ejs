<!-- Start chats tab-pane -->
<div class="tab-pane fade show active" id="pills-chat" role="tabpanel" aria-labelledby="pills-chat-tab">
    <!-- Start chats content -->
    <div>
        <!-- .p-4 -->
        <div class="px-4 pt-1">
            
            <div class="user-chat-nav float-end">
                <div data-bs-toggle="tooltip" data-bs-placement="bottom" title="Add Chat">
                    <!-- Button trigger modal -->
                    <button type="button" class="btn btn-link text-decoration-none text-muted font-size-18 py-0" data-bs-toggle="modal" data-bs-target="#addChat">
                        <i class="ri-user-add-line"></i>
                    </button>
                </div>
            </div>
            
            <h4 class="mb-2">Chats</h4>

            <!-- Start Add contact Modal -->
            <div class="modal fade" id="addChat" tabindex="-1" role="dialog" aria-labelledby="addChat" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                    <div class="modal-content">
                        <form id="new-chat-form" action="javascript:void(0);">
                            <div class="modal-header">
                                <h5 class="modal-title font-size-16" id="addContact-exampleModalLabel">Add Chat</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                                </button>
                            </div>
                            <div class="modal-body p-4">
                                    <div class="mb-3">
                                        <label for="addusername-input" class="form-label">Username</label>
                                        <input id="new-chat-name-input" type="text" class="form-control" id="addusername-input" placeholder="Enter Username" autocomplete="off">
                                    </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-link" data-bs-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary" form="new-chat-form" id="new-chat-submit-button">Start Chat</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- End Add contact Modal -->

            <!-- Start User no exist Modal -->
            <div class="modal fade" id="user-no-exist" tabindex="-1" role="dialog" aria-labelledby="userNoExist" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title font-size-16" id="addContact-exampleModalLabel">User Does Not Exist</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body p-4">
                            <div class="mb-3">
                                <p>Sorry the username <<span id='username-no-exist-span'></span>> you entered does not exist.</p>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End User no exist Modal -->

            <!-- Start Search Box-->
            <div class="search-box chat-search-box"> 
                <div class="input-group mb-3 rounded-3">
                    <span class="input-group-text text-muted bg-light pe-1 ps-3" id="basic-addon1">
                        <i class="ri-search-line search-icon font-size-18"></i>
                    </span>
                    <input type="text" class="form-control bg-light search-chats" placeholder="Search messages or users" aria-label="Search messages or users" aria-describedby="basic-addon1">
                    <span class="input-group-text text-muted bg-light pe-1 ps-3 d-none close-search" id="basic-addon">
                        <button type="button" class="btn-close" aria-label="Close"></button>
                    </span>
                </div> 
            </div>
            <!-- End Search Box-->
        </div>
        <!-- .p-4 -->

        <!-- Start user status -->
        <div class="px-4 pb-2" dir="ltr">
            <!-- start user status carousel -->
            <div class="owl-carousel owl-theme" id="user-status-carousel"></div>
            <!-- end user status carousel -->
        </div>
        <!-- end user status -->

        <!-- Start chat-message-list -->
        <div class="px-2">
            <h5 class="mb-1 px-3 font-size-16 recent-header">Recent</h5>

            <div class="chat-message-list pb-5" data-simplebar>

                <ul class="list-unstyled chat-list chat-user-list">
                
                </ul>
            </div>
        </div>
        <!-- End chat-message-list -->
    </div>
    <!-- Start chats content -->
</div>
<!-- End chats tab-pane -->