    <!-- start chat user head -->
    <div class="p-3 p-lg-4 border-bottom">
        <div class="row align-items-center">
            <div class="col-sm-4 col-8">
                <div class="d-flex align-items-center">
                    <div class="d-block d-lg-none me-2 ms-0">
                        <a href="javascript: void(0);" class="user-chat-remove text-muted font-size-16 p-2">
                        	<i class="ri-arrow-left-s-line"></i>
                        </a>
                    </div>
                    <div class="me-1 ms-0 chat-user-avatar-container-small">
                        <!-- <img src="/images/users/avatar-4.jpg" class="rounded-circle avatar-xs" alt=""> -->
